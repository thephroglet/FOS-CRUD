{% extends "@Recruitment/Default/indexpro1.html.twig" %}
{% block container %}
    <div class="col-lg-12">
        <h1 class="page-header">Professional Forms</h1>
    </div>


    <table border="2">
        <tr>
            <th>ID</th>
            <th>Last Name</th>
            <th>First Name</th>
            <th>Soft Skills</th>
            <th>Upload CV</th>
            <th>Email</th>
        </tr>
        {% for i in professional %}
            <tr>
                <td>Candidate{{ i.id }}</td>
                <td>{{ i.proname }}</td>
                <td>{{ i.prosurname }}</td>
                <td>{{ i.softskills }}</td>
                <td><img src="{{ asset('CV/') }}{{ i.image }}" style="width: 50px;height: 50px"></td>
                <td>{{ i.email }}</td>
                <td><a href="{{ path('delete_professional',{'id':i.id}) }}">Delete</a> </td>
                <td><a href="{{ path('update_professional',{'id':i.id}) }}">Update</a> </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}