{% extends "@Product/Default/indexpro1.html.twig" %}
{% block container %}


    <h1>Products List:</h1>

    <table border="2">
        <tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Product Quantity</th>
            <th>Product Description</th>
            <th>Product Price</th>
            <th>Product Image</th>
        </tr>
        {% for i in product %}
            <tr>
                <td>Product{{ i.id }}</td>
                <td>{{ i.nompr }}</td>
                <td>{{ i.quantity }}</td>
                <td>{{ i.descrip }}</td>
                <td>{{ i.prix }}</td>
                <td><img src="{{ asset('images/') }}{{ i.image }}" style="width: 50px;height: 50px"></td>
                <td><a href="{{ path('delete_product',{'id':i.id}) }}">Delete</a> </td>
                <td><a href="{{ path('update_product',{'id':i.id}) }}">Update</a> </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}